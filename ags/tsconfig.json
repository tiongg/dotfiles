{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Preserve",
    // "module": "CommonJS",
    "lib": [
      "ES2022",
    ],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": [
      "./types",
    ],
    "skipLibCheck": true,
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/components/*": ["src/components/*"],
      "@/windows/*": ["src/windows/*"],
      "@/constants/*": ["src/constants/*"]
    }
  }
}